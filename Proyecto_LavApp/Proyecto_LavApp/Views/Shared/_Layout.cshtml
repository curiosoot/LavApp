@using Proyecto_LavApp.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Jekyll v4.1.1">
    <title>Dashboard Template · Bootstrap</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.5/examples/dashboard/">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @*@media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }*@
    </style>
    <!-- Custom styles for this template -->
    <link href="~/Content/dashboard.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="~/ptallappal/Index">LavApp - Smart car wash</a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse" data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="@Url.Action("cerrarsesion", "login_")">Cerrar Sesión</a>
            </li>
        </ul>
    </nav>

    @*<div class="container-fluid">*@
    <div class="container body-content">
        <div class="row">
            <div class="position-fixed">
                <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="sidebar-sticky pt-3">
                        <ul class="nav flex-column">

                            @{
                                usuarios usuario = new usuarios();

                                if (Session["rol"] != null)
                                {

                                    foreach (rolesCls roles in (List<rolesCls>)Session["rol"])
                                    {
                                        if (roles.sn_admin == true)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link active" href="#" )">
                                                    <span data-feather="home"></span>
                                                    Parametrización <span class="sr-only">(current)</span>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "tipo_documento_")">
                                                    <span data-feather="file"></span>
                                                    Tipo Documento
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "roles_")">
                                                    <span data-feather="file"></span>
                                                    Roles
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "personas_")">
                                                    <span data-feather="shopping-cart"></span>
                                                    Personas
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "usuarios_")">
                                                    <span data-feather="users"></span>
                                                    Usuarios
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "usuario_rol_")">
                                                    <span data-feather="bar-chart-2"></span>
                                                    Usuarios por Rol
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "tipo_vehiculos_")">
                                                    <span data-feather="layers"></span>
                                                    Tipos Vehiculos
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "marca_vehiculos_")">
                                                    <span data-feather="layers"></span>
                                                    Marcas Vehiculos
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "modelo_vehiculos_")">
                                                    <span data-feather="layers"></span>
                                                    Modelos Vehiculos
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "color_vehiculo_")">
                                                    <span data-feather="layers"></span>
                                                    Colores Vehiculos
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "tipo_servicio_")">
                                                    <span data-feather="layers"></span>
                                                    Servicios Prestados
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "estado_servicio_")">
                                                    <span data-feather="layers"></span>
                                                    Estados Servicios
                                                </a>
                                            </li>
                                        }
                                        if (roles.sn_cliente == true)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "vehiculos_")">
                                                    <span data-feather="layers"></span>
                                                    Vehiculos
                                                </a>
                                            </li>
                                        }
                                        if (roles.sn_cliente == true || roles.sn_empleado == true)
                                        {
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Index", "reserva_servicio_")">
                                                    <span data-feather="layers"></span>
                                                    Reservas
                                                </a>
                                            </li>
                                        }
                                    }
                                }
                            }

                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </div>
        </div>
    </div>

    @*<div class="container body-content">

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            </footer>
        </div>*@

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    @*<script>window.jQuery || document.write('<script src="../assets/js/vendor/jquery.slim.min.js"><\/script>')</script>*@
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.9.0/feather.min.js"></script>
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>*@
    @*<script src="~/Scripts/dashboard.js"></script>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
