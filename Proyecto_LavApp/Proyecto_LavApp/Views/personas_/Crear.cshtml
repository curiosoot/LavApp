@model Proyecto_LavApp.Models.personas

@{
    ViewBag.Title = "Crear";
    List<SelectListItem> listdocumentos = (List<SelectListItem>)ViewBag.lista;
}

<h2 class="text-center"><i class="fas fa-user"></i> Crear Persona</h2>


@using (Html.BeginForm("Crear", "personas_", FormMethod.Post, new { @id = "frmcrearpersonas", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       

    <div class="form-row">
        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.id_tipo_documento, "Tipo Documento", htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @Html.DropDownList("id_tipo_documento", listdocumentos, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_tipo_documento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.txt_documento, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.txt_documento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.txt_documento, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.fec_nacimiento, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.fec_nacimiento, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.EditorFor(model => model.fec_nacimiento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fec_nacimiento, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-row">

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.txt_nombre, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.txt_nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.txt_nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.txt_apellido1, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.txt_apellido1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.txt_apellido1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-4">
            @Html.LabelFor(model => model.txt_apellido2, htmlAttributes: new { @class = "control-label col-md-12" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.txt_apellido2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.txt_apellido2, "", new { @class = "text-danger" })
            </div>
        </div>


    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <!--<input type="submit" value="Create" class="btn btn-default" />-->
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Crear
                </button>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">¿Desea crear el registro?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div style="padding:1em">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                <button type="button" onclick="Agregar()" class="btn btn-primary">Aceptar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Close Button trigger modal -->

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    function Agregar() {
        var frmcrearpersonas = document.getElementById("frmcrearpersonas");
        frmcrearpersonas.submit();
    }

</script>
