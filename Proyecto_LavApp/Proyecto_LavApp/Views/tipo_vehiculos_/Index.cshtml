@model IEnumerable<Proyecto_LavApp.Models.tipo_vehiculos>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center"><i class="fas fa-car"></i> Tipos de Vehículo</h2>

<p class="text-right">
    <a href="/tipo_vehiculos_/Crear" class="btn btn-primary"><span class="mr-2">Crear Vehículo </span><i class="fas fa-plus-circle text-white"></i></a>
</p>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.txt_tipo_vehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sn_activo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.txt_tipo_vehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sn_activo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.id_tipo_vehiculo }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.id_tipo_vehiculo })
            </td>
        </tr>
    }

</table>
