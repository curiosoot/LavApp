@using Proyecto_LavApp.Models
@model Proyecto_LavApp.Models.ViewModels.PtallappViewModel 

@{
    ViewBag.Title = "Index";

    if (Session["Usuario"] != null)
    {
        var rol = (rolesCls)Session["rol"];
        <div class="row">
            <div class="col-md-12">
                @{
                    if (rol.sn_admin)
                    {
                        <div class="row">
                            <h1 class="text-center my-2 col-md-12">Panel Administrador</h1>

                            <div class="col-12 col-sm-12 col-md-6 my-2 card-main">
                                <div class="m-2 bg-dark p-4 text-white rounded-card card-reservas" id="card_reserva">
                                    <h1 class="text-center text-white-50">
                                        Reservas de dia
                                    </h1>
                                    <h2 class="content-card d-flex justify-content-center align-items-center align-content-center">
                                        <span class="fa fa-users fa-fw mr-3"></span>
                                        @Model.Cantidad
                                    </h2>
                                </div>
                            </div>

                            <div class="col-12 col-sm-12 col-md-6 my-2 card-main">
                                <div class="m-2 bg-dark p-4 text-white rounded-card card-autos" id="card_vehiculo">
                                    <h1 class="text-center text-white-50">Ingresos estimados</h1>
                                    <h2 class="content-card d-flex justify-content-center align-items-center align-content-center">
                                        @Model.Total.ToString("C")
                                    </h2>
                                </div>
                            </div>

                        </div>
                    }
                    else if (rol.sn_empleado)
                    {
                        <h1 class="text-center my-2">Panel Empleados</h1>
                    }
                }
            </div>
        </div>
    }
}

